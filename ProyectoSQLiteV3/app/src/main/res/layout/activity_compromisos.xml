<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Compromisos">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="415dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="157dp"
        android:layout_x="0dp"
        android:layout_y="390dp"
        android:background="@android:color/holo_red_light"
        android:text="     Descripcion:"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="391dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="415dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/datFecha"
        android:layout_x="0dp"
        android:layout_y="48dp"
        android:background="@android:color/holo_red_light"
        android:text="     Fecha:"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="50dp" />

    <DatePicker
        android:id="@+id/datFecha"
        android:layout_width="389dp"
        android:layout_height="307dp"
        android:layout_above="@+id/textView6"
        android:layout_x="0dp"
        android:layout_y="85dp"
        android:datePickerMode="spinner"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="84dp"></DatePicker>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="406dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@android:color/holo_blue_dark"
        android:text="    Compromisos"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="-3dp" />

    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="382dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="-157dp"
        android:layout_x="0dp"
        android:layout_y="423dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="436dp" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/btnGrabar"
        android:layout_x="203dp"
        android:layout_y="508dp"
        android:onClick="regresar_onclick"
        android:text="Regresar"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/btnGrabar"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_x="10dp"
        android:layout_y="512dp"
        android:onClick="grabar_onclick"
        android:text="Grabar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="502dp" />

</AbsoluteLayout>